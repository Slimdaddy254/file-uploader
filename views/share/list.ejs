<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="card-title mb-0">
              <i class="bi bi-share"></i> Share Links for "<%= folder.name %>"
            </h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createShareModal">
              <i class="bi bi-plus-circle"></i> Create New Link
            </button>
          </div>

          <% if (sharedLinks.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Share Link</th>
                    <th>Created</th>
                    <th>Expires</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% sharedLinks.forEach(link => { %>
                    <% const isExpired = new Date() > new Date(link.expiresAt); %>
                    <tr>
                      <td>
                        <div class="input-group input-group-sm">
                          <input 
                            type="text" 
                            class="form-control" 
                            value="<%= protocol %>://<%= host %>/share/<%= link.token %>" 
                            readonly
                            id="link-<%= link.id %>"
                          >
                          <button class="btn btn-outline-secondary" onclick="copyShareLink('<%= link.id %>')">
                            <i class="bi bi-clipboard"></i>
                          </button>
                        </div>
                      </td>
                      <td><%= new Date(link.createdAt).toLocaleDateString() %></td>
                      <td><%= new Date(link.expiresAt).toLocaleDateString() %></td>
                      <td>
                        <% if (isExpired) { %>
                          <span class="badge bg-danger">Expired</span>
                        <% } else { %>
                          <span class="badge bg-success">Active</span>
                        <% } %>
                      </td>
                      <td>
                        <a href="<%= protocol %>://<%= host %>/share/<%= link.token %>" target="_blank" class="btn btn-sm btn-info">
                          <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                        <form action="/share/<%= link.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Delete this share link?')">
                          <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="bi bi-link-45deg" style="font-size: 4rem; color: #ccc;"></i>
              <p class="text-muted mt-3">No share links created yet</p>
            </div>
          <% } %>

          <div class="mt-4">
            <a href="/folders?folder=<%= folder.id %>" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Back to Folder
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Share Link Modal -->
<div class="modal fade" id="createShareModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Share Link</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/share/<%= folder.id %>" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="duration" class="form-label">Link Duration</label>
            <select class="form-select" id="duration" name="duration" required>
              <option value="1d">1 day</option>
              <option value="7d" selected>7 days</option>
              <option value="14d">14 days</option>
              <option value="30d">30 days</option>
              <option value="90d">90 days</option>
            </select>
            <div class="form-text">
              Choose how long the share link should remain active
            </div>
          </div>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Anyone with this link will be able to view and download all files in this folder and its subfolders.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Link</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function copyShareLink(linkId) {
    const input = document.getElementById('link-' + linkId);
    input.select();
    document.execCommand('copy');
    
    const btn = event.target.closest('button');
    const originalHTML = btn.innerHTML;
    btn.innerHTML = '<i class="bi bi-check"></i>';
    setTimeout(() => {
      btn.innerHTML = originalHTML;
    }, 2000);
  }
</script>
