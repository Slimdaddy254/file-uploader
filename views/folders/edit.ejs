<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Rename Folder</h2>
          <form action="/folders/<%= folder.id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Folder Name</label>
              <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                value="<%= folder.name %>"
                required
              >
            </div>
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Save Changes</button>
              <a href="/folders<%= folder.parentId ? '?folder=' + folder.parentId : '' %>" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
